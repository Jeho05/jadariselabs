# ============================================
# JadaRiseLabs - Enterprise Video Generation
# Environment Configuration Template
# ============================================

# --------------------------------------------
# Core Application
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# --------------------------------------------
# Redis Configuration (Required for Queue)
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --------------------------------------------
# Replicate API Configuration
# --------------------------------------------
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REPLICATE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# --------------------------------------------
# Rate Limiting Configuration
# --------------------------------------------
RATE_LIMIT_VIDEO_PER_MINUTE=10
RATE_LIMIT_VIDEO_PER_HOUR=100
RATE_LIMIT_VIDEO_PER_DAY=500

# --------------------------------------------
# Queue Configuration
# --------------------------------------------
QUEUE_MAX_CONCURRENT=3
QUEUE_TIMEOUT_MS=300000

# --------------------------------------------
# Monitoring & Logging
# --------------------------------------------
LOG_LEVEL=info
SENTRY_DSN=https://xxxxxxxxx@sentry.io/xxxxx
PROMETHEUS_ENDPOINT=http://localhost:9090

# --------------------------------------------
# Storage Configuration
# --------------------------------------------
SUPABASE_STORAGE_BUCKET=generations
MAX_VIDEO_SIZE_MB=100

# --------------------------------------------
# Feature Flags
# --------------------------------------------
ENABLE_VIDEO_GENERATION=true
ENABLE_WEBSOCKET=true
ENABLE_PROMPT_ENHANCEMENT=true
ENABLE_CONTENT_MODERATION=true

# --------------------------------------------
# Credit System
# --------------------------------------------
CREDIT_COST_WAN2_PER_SECOND=1
CREDIT_COST_GEN2_PER_SECOND=2
CREDIT_COST_SORA_PER_SECOND=3

# --------------------------------------------
# WebSocket Configuration
# --------------------------------------------
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/api/socket
